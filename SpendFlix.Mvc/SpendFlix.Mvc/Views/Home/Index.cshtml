    @*Card görünümü*@

    <div class="row row-cols-3 row-cols-md-3 g-1">

        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="col">
                <div class="card">
                    <img src="@Model[i].ImageLink" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@Model[i].Title</h5>
                        <p class="card-text">@Model[i].Description</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
